@model UrlShortener.Models.ViewModels.ShortenerViewModel
@{
    ViewData["Title"] = "URL Shortener";
}

<div class="text-center">
    <h1 class="display-5">Welcome to the world's first online URL shortening service</h1>
    <p>If you need your URL shortened, look no further. Simply paste your URL below to get started!</p>
</div>

<form method="post" asp-controller="Shortener" asp-action="Index" class="mb-2">
    <div class="text-center mb-2">
        <input asp-for="Url" type="text" class="col col-12" placeholder="Paste desired URL here" />   
        <span asp-validation-for="Url" class="text-danger col-12" />
    </div>

    <div class="text-center">
        <button type="submit">Shorten</button>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@if (!string.IsNullOrEmpty(Model.ShortenedUrl)) { 
    <div class="text-center">
        <input asp-for="ShortenedUrl" type="text" class="col col-8" />
    </div>
}